-content_for :title, @trip_report.destination

.tripreport
  .row.last
    .ninecol
      %h5.byline=byline(@trip_report)

      -if @photos.present?
        =render partial: "photo_row", locals: {photos: @photos.first(4), style: :thumbnail_variable}
      .row{class: @photos.size <= 4 ? "last" : ""}
        .twelvecol
          .markdown=markdown(@trip_report.report)

      -if @photos.size > 4
        -@photos.from(4).in_groups_of(4) do |photos|
          =render partial: "photo_row", locals: {photos: photos, style: :thumbnail_variable}
              
    .threecol.last
      .row=render partial: "years"

      -if current_user
        .row.last
          =link_to 'Add your photos', add_photos_trip_report_path(@trip_report), class: "button"
          -if current_user.can_edit?(@trip_report)
            =link_to "Edit this report", edit_trip_report_path(@trip_report), class: "button"
      
    