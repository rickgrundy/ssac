-content_for :title, @trip_report.destination

.tripreport
  .row.last
    .tencol
      %h5.byline=byline(@trip_report)

      -if @photos.present?
        =render partial: "photo_row", locals: {photos: @photos.first(4).reject(&:nil?)}
      .row{class: @photos.size <= 4 ? "last" : ""}
        .twelvecol
          .markdown=markdown(@trip_report.report)

      -if @photos.size > 4
        -@photos.from(4).in_groups_of(4) do |photos|
          =render partial: "photo_row", locals: {photos: photos.reject(&:nil?)}
          
      -if current_user
        .row.last
          %h4
            =link_to 'Add your photos from this trip', add_photos_trip_report_path(@trip_report)
            -if current_user.can_edit?(@trip_report)
              |
              =link_to "Edit this trip report", edit_trip_report_path(@trip_report)
              
    .twocol.last=render partial: "years"