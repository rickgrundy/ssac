-content_for :title, @year ? "Trip Reports from #{@year}" : "Recent Trip Reports"

.trip_reports
  .row.last
    .ninecol
      -@trip_reports.each do |trip_report|
        .row{class: trip_report == @trip_reports.last ? "last" : ""}
          =render partial: "snippet", locals: {trip_report: trip_report, homepage: false, truncate: 1000}
    .threecol.last
      .row=render partial: "years"
      -if current_user
        .row.last=link_to "Write a new trip report", new_trip_report_path, class: "button"
      